<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-lg-6">
      <div class="mt-3 mb-3">
        <div class="titlemessage">
          <div class="notification-content">
            <h2> <%= @post.title %> </h2>
            <div class="d-flex justify-content-between">
              <h5>
                <%= @post.user.name %>
              </h5>
            <div>
              <%= link_to edit_neighbourhood_post_path(@post) do %>
              <i class="fas fa-pencil-alt ml-3"></i>
              <% end %>
              <%= link_to neighbourhood_post_path(@post), method: :delete, data: { confirm: "Are you sure you want to do this ?" } do %>
              <i class="far fa-trash-alt ml-3"></i>
              <% end %>
            </div>
            </div>
            <p> <%= @post.content %> </p>
          <div class="small_text"> This post has been viewed <%= @post.comments.count %> times </div>
          </div>
        </div>
      <div class="mt-3 mb-3">
        <%= render @post.comments %>
      </div>
      </div>
      <div class="ml-3 mr-3">
        <%= render "comments/form" %>
      </div>
    </div>
  </div>
</div>
