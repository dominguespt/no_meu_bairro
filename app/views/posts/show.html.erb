
<h1>Posts#show</h1>

<p>Boas app/views/posts/show.html.erb</p>

<div id="neighbourhood_post_content"></div>
<h1>
  <%= @post.title %>
</h1>
<p>
  <%= @post.content %>
</p>

<div id="comments">
  <h2>
    <%= @post.comments.count %>
  </h2>
  <%= render @post.comments %>
</div>
<h3>Reply to thread
  <%= render "comments/form" %>
</h3>


<%= link_to "Edit", edit_neighbourhood_post_path(@post) %>
<%= link_to "Delete", neighbourhood_post_path(@post), method: :delete, data: { confirm: "Are you sure you want to do this ?" } %>
<%= link_to "Home", root_path %>
<%= link_to "Back", neighbourhood_posts_path %>

