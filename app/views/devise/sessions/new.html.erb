<div class="masthead-user">
  <div class="container">
      <div class="row justify-content-center">
        <div class="col-sm-12 col-lg-6">
          <div class="background-card mt-5">
            <h2>Log in</h2>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                <div class="center-buttons">
                  <%= f.button :submit, "Log in", class: "btn btn-primary mb-3" %>
                    <div class="mb-4" style="font-size: 14px">
                      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
                    </div>
                      <p style="font-size: 14px">Don't have an account yet?</p>
                        <%= link_to new_registration_path(resource_name) do %>
                        <button type="button" class="btn btn-outline-primary mb-2">Register</button>
                        <% end %>
                      <% end %>
                </div>
              </div>
              <div class="center-buttons mt-5 mb-3">
                <strong><%= link_to "Back", :back %></strong>
              </div>
            </div>
         </div>
        </div>
      </div>
  </div>
</div>










