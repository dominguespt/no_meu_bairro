<div class="masthead-user">
  <div class="container">
      <div class="row justify-content-center">
        <div class="col-sm-12 col-lg-6">
          <div class="background-card">

            <h2 class="mt-2 mb-4">Edit profile</h2>

              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= f.error_notification %>


                <% if current_user.photo.attached? %>
                  <div class="form-inputs">
                    <div class="center-buttons">
                      <%= f.input :photo, as: :file,
                                  required: false,
                                  input_html: { class: 'd-none' },
                                  label_html: { class: 'button-profile-photo avatar-large', style: "background-image: url(#{current_user.photo.service_url})" },
                                  label: 'Change profile photo!' %>
                    </div>
                    <%= f.input :name,
                                hint:"leave it blank if you don't want to change it",
                                required: false,
                                input_html: {autocomplete: "Do You wanto to change your name?"} %>
                    <%= f.input :email, required: true, autofocus: true %>
                    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                    <% end %>
                    <%= f.input :password,
                                hint: "leave it blank if you don't want to change it",
                                required: false,
                                input_html: { autocomplete: "new-password" } %>
                    <%= f.input :password_confirmation,
                                required: false,
                                input_html: { autocomplete: "new-password" } %>
                    <%= f.input :current_password,
                                hint: "we need your current password to confirm your changes",
                                required: true,
                                input_html: { autocomplete: "current-password" } %>
                                <%= f.association :neighbourhood,
                                                  collection: Neighbourhood.name,
                                                  prompt: "Choose a neighbourhood!"  %>
                    <div class="center-buttons">
                    <%= f.button :submit, "Update", class: "btn btn-primary mb-3" %>
                    <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
                    </div>
                  </div>
                <% else %>

                  <div class="form-inputs">
                    <div class="center-buttons">
                      <%= f.input :photo, as: :file,
                                  required: false,
                                  input_html: { class: 'd-none' },

                                  label_html: { class: 'button-profile', id: 'photo-input'},
                                  label: 'Add a profile photo!' %>

                    </div>
                    <%= f.input :name,
                                hint:"leave it blank if you don't want to change it",
                                required: false,
                                input_html: {autocomplete: "Do You wanto to change your name?"} %>
                    <%= f.input :email, required: true, autofocus: true %>
                    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                    <% end %>
                    <%= f.input :password,
                                hint: "leave it blank if you don't want to change it",
                                required: false,
                                input_html: { autocomplete: "new-password" } %>
                    <%= f.input :password_confirmation,
                                required: false,
                                input_html: { autocomplete: "new-password" } %>
                    <%= f.input :current_password,
                                hint: "we need your current password to confirm your changes",
                                required: true,
                                input_html: { autocomplete: "current-password" } %>
                    <div class="center-buttons">
                      <%= f.button :submit, "Update", class: "btn btn-primary mb-3" %>
                      <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
                    </div>
                  </div>
                <% end %>
              <% end %>
          <div class="center-buttons">
            <div class="m-3"></div>
            <%= render "devise/shared/links" %>
            <div class="m-3"></div>
            <%= link_to 'Back', 'javascript:history.back()' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'components/footer' %>

