<div class="container">
  <div class="mt-5">

    <h1><%= @service.name  %></h1>
    <h4><%= @service.address %></h4>
    <p style="color: #F6830F"><%= @service.category %></p>
    <p class="mt-4 mt-5"><%= @service.description %></p>


    <div>
    <% if @service.photo.attached?%>
      <%= cl_image_tag @service.photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
    </div>


    <% if current_user == @service.user %>
      <%= link_to edit_neighbourhood_service_path(@neighbourhood, @service) do %>
        <p>Edit Service</p>
      <% end %>
      <%= link_to "Delete service",
                  neighbourhood_service_path(@service),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
      <% end  %>

    <div class="mt-4">
      <%= render 'reviews/new' %>
    </div>
    <div class="mt-4">
    <%= render 'reviews/show' %>
    </div>

  </div>
</div>

    <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>



<script>
  function reloadPage() {
  // The last "domLoading" Time //
  var currentDocumentTimestamp =
  new Date(performance.timing.domLoading).getTime();
  // Current Time //
  var now = Date.now();
  // Ten Seconds //
  var tenSec = 1000;
  // Plus Ten Seconds //
  var plusTenSec = currentDocumentTimestamp + tenSec;
  if (now > plusTenSec) {
  location.reload();
  } else {}
  }
  reloadPage();
</script>
