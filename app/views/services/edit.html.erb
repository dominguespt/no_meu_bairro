<div class="masthead-user">
  <div class="container">
      <div class="row justify-content-center">
        <div class="col-sm-12 col-lg-6">
          <div class="background-card">
            <h2>Edit service</h2>
            <%= simple_form_for [@neighbourhood, @service] do |f| %>
              <%= f.input :name %>
              <%= f.input :address, html: { id: :service_address } %>
              <%= f.input :description %>
              <%= f.input :phone %>
              <%= f.input :opentime %>
              <%= f.input :closetime %>
              <%= f.input :website %>

          <div class="center-buttons">
              <%= f.input :photos, as: :file,
                          required: false,
                          input_html: { class: 'd-none', multiple: true },
                          label_html: { class: 'btn btn-outline-primary d-flex align-items-center mt-3', style: 'width: 200px' },
                          label: 'Add photos to your service!' %>
              <%= f.button :submit, "Update details", class: "btn btn-primary mt-2" %>
            <% end %>
            <div class="m-4">
              <%= link_to "Delete service",
                          neighbourhood_service_path(@service),
                          method: :delete,
                          style: "color: #BB2205",
                          data: { confirm: "Are you sure?" } %>
            </div>
          </div>
                <div class="center-buttons mb-3">
                  <%= link_to 'Back', 'javascript:history.back()' %>
                </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'components/footer' %>
