<div class="masthead-user">
  <div class="container">
      <div class="row justify-content-center">
        <div class="col-sm-12 col-lg-6">
          <div class="background-card mt-5">
          <h2>Create a service</h2>
          <p>Do you own a bussiness? Annouce in no meu bairro!</p>

          <%= simple_form_for [@neighbourhood, @service] do |f| %>
            <%= f.input :name %>
            <%= f.input :address, html: { id: :service_address } %>
            <%= f.input :description %>
            <%= f.input :phone %>
            <%= f.input :opentime %>
            <%= f.input :closetime %>
            <%= f.input :website %>
            <%= f.input :category %>
            <%= f.input :photo, as: :file, input_html: { class: 'd-none' }, label_html: { class: 'btn btn-primary'}, label: 'ðŸ“· Upload a photo' %>
            <%= f.submit %>
          <% end %>
         </div>
         <div class="mt-4 center-buttons">
           <%= link_to neighbourhood_service_path(@neighbourhood, @service) do %>
             <i class="fas fa-arrow-left m-5" style="font-size: 30px"></i>
           <% end %>
         </div>
        </div>
      </div>
  </div>
</div>
