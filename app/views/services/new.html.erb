<div class="masthead">
  <div class="container">
      <div class="row justify-content-center">
        <div class="col-sm-12 col-lg-6">
          <div class="background-card mt-5">
          <h2>Create a service</h2>
          <p>Do you own a bussiness? Annouce in no meu bairro!</p>

          <%= simple_form_for [@neighbourhood, @service] do |f| %>
            <%= f.input :name %>
            <%= f.input :photo, as: :file %>
            <%= f.input :address, html: { id: :service_address } %>
            <%#= f.association :neighbourhood %>
            <%= f.input :phone %>
            <%= f.input :opentime %>
            <%= f.input :closetime %>
            <%= f.input :website %>
            <%= f.input :category %>
